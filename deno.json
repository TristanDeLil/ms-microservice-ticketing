{
    "compilerOptions": {
        "strict": true,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true
    },
    "lint": {
        "include": ["src/"],
        "rules": {
            "tags": ["recommended"],
            "include": ["ban-untagged-todo"],
            "exclude": []
        }
    },
    "fmt": {
        "useTabs": false,
        "lineWidth": 100,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": true,
        "proseWrap": "preserve",
        "include": ["src/"]
    },
    "lock": false,
    "nodeModulesDir": "none",
    "test": {
        "include": ["tests/"]
    },
    "tasks": {
        "run": "deno run --env-file=config/.env --allow-env --allow-net --allow-read --allow-write --allow-sys src/Main/Main.ts ",                     
        "test": "deno test -A --coverage; deno coverage --exclude=tests; deno coverage --exclude=tests --html",
        "qa": "deno upgrade; rm -rf coverage; deno check src/ && deno fmt && deno lint && deno task  test",
        "qanc": "deno upgrade; rm -rf coverage; deno fmt && deno lint && deno task  test"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/uuid": "jsr:@std/uuid",
        "@oak/oak": "jsr:@oak/oak@^17.1.3",
        "@cloudamqp/amqp-client": "npm:@cloudamqp/amqp-client@^3.1.1",
        "@asyncapi/parser": "npm:@asyncapi/parser@^3.4.0",
        "Howestprime.Ticketing/": "./src/",
        "Howestprime.Ticketing/tests/": "./tests/",
        "@sonarqube/sonarqube": "npm:sonarqube-scanner@^3.5.0",
        "@mongodb": "npm:mongodb@^5.6.0",
        "@std/dotenv": "jsr:@std/dotenv",
        "@domaincrafters/std": "jsr:@domaincrafters/std@1",
        "@domaincrafters/domain": "jsr:@domaincrafters/domain@1",
        "@domaincrafters/application": "jsr:@domaincrafters/application@1",
        "@domaincrafters/di": "jsr:@domaincrafters/di@1"
    }
}